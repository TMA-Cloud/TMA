# --------------------------------------
# Application Configuration
# --------------------------------------
NODE_ENV=development
BPORT=3000
BACKEND_URL=http://localhost:3000

# --------------------------------------
# Database Configuration
# --------------------------------------
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=tma_cloud_db_password
DB_NAME=tma_cloud_storage
DB_SSLMODE=disable
PGBOSS_SCHEMA=pgboss

# --------------------------------------
# JSON Web Token (JWT) & Session Security
# --------------------------------------
JWT_SECRET=tma_cloud_secret
SESSION_BINDING=true
FORCE_INSECURE_COOKIES=false

# --------------------------------------
# Google OAuth 2.0 Configuration
# --------------------------------------
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=

# --------------------------------------
# File Uploads & Storage
# --------------------------------------
UPLOAD_DIR=./uploads
FILE_ENCRYPTION_KEY=tma_cloud_file_encryption_key

# --------------------------------------
# Logging & Audit System
# --------------------------------------
LOG_LEVEL=debug
LOG_FORMAT=pretty
METRICS_ALLOWED_IPS=127.0.0.1
AUDIT_WORKER_CONCURRENCY=5
AUDIT_JOB_TTL_SECONDS=82800

# --------------------------------------
# Redis Configuration
# --------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=tma_cloud_redis_password
REDIS_DB=0
