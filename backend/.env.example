# --------------------------------------
# Application Configuration
# --------------------------------------
# Environment mode (e.g., development, production)
NODE_ENV=
# The port the backend server will run on
BPORT=
# Backend URL that ONLYOFFICE can access
BACKEND_URL=

# --------------------------------------
# Database Configuration
# --------------------------------------
# Host for the database
DB_HOST=
# Port for the database
DB_PORT=
# Username for the database
DB_USER=
# Password for the database user
DB_PASSWORD=
# Name of the database
DB_NAME=
# SSL mode for database connection (e.g., disable, require)
DB_SSLMODE=

# --------------------------------------
# JSON Web Token (JWT)
# --------------------------------------
# Secret key for signing JWTs
JWT_SECRET=

# --------------------------------------
# Google OAuth 2.0 Configuration
# --------------------------------------
# Google Client ID for OAuth
GOOGLE_CLIENT_ID=
# Google Client Secret for OAuth
GOOGLE_CLIENT_SECRET=
# Redirect URI for Google OAuth callback
GOOGLE_REDIRECT_URI=

# --------------------------------------
# Client Application
# --------------------------------------
# URL of the frontend client application
CLIENT_URL=

# --------------------------------------
# File Uploads & Storage
# --------------------------------------
# Directory to store uploaded files
UPLOAD_DIR=
# Storage limit for users (in bytes)
STORAGE_LIMIT=

# --------------------------------------
# ONLYOFFICE Integration
# --------------------------------------
# JWT secret for ONLYOFFICE
ONLYOFFICE_JWT_SECRET=
